<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to the UEFA Ranking System App"
        android:id="@+id/MenuTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:layout_marginTop="53dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select from any option below"
        android:id="@+id/MenuDescription"
        android:textSize="18dp"
        android:layout_below="@+id/MenuTitle"
        android:layout_alignLeft="@+id/MenuTitle"
        android:layout_marginTop="38dp" />


    <Button
        android:id="@+id/MainMenuQualifyingActivityButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/MenuDescription"
        android:onClick="MainMenuQualifyingActivity"
        android:text="@string/qualifyingActivityButton" />


    <Button
        android:id="@+id/TeamRankingActivityButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/MainMenuQualifyingActivityButton"
        android:onClick="TeamRankingActivity"
        android:text="@string/teamRankingActivityButton" />



    <Button
        android:id="@+id/CountryRankingActivityButton"
        android:layout_width="match_parent"
        android:layout_below="@id/TeamRankingActivityButton"
        android:layout_height="wrap_content"
        android:onClick="CountryRankingActivity"
        android:text="@string/countryRankingActivityButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If you require any help in understanding what each section means select the Help Button"
        android:id="@+id/MenuExtra"
        android:textSize="18dp"
        android:layout_below="@+id/CountryRankingActivityButton"
        android:layout_alignLeft="@+id/MenuDescription"
        android:layout_marginTop="40dp"></TextView>

    <Button
        android:id="@+id/HelpButton"
        android:layout_width="match_parent"
        android:layout_below="@id/MenuExtra"
        android:layout_height="wrap_content"
        android:onClick="HelpActivity"
        android:text="Help" />

    <Button
        android:id="@+id/AboutButton"
        android:layout_width="match_parent"
        android:layout_below="@id/HelpButton"
        android:layout_height="wrap_content"
        android:onClick="AboutActivity"
        android:text="About" />


</RelativeLayout><!-- From: file:/C:/Users/Daniel/Documents/dev2/Android/AndroidJSONParsing1/app/src/main/res/layout/activity_main_menu.xml -->